{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(?:-|[^\\[{#\\s](?:[^:]|:[^ ])*:)$",
        "decreaseIndentPattern": "(?!)"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*- ",
            "action": {
                "indent": "none",
                "appendText": "- "
            }
        },
        {
            "beforeText": "^\\s*>(?: |$)",
            "action": {
                "indent": "none",
                "appendText": "> "
            }
        },
        {
            "beforeText": "^\\s*:(?: |$)",
            "action": {
                "indent": "none",
                "appendText": ": "
            }
        }
    ]
}